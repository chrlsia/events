<h1><%= @events.size%> Events</h1>
<ul>
  <% @events.each do |event|%>
    <article>
      <header>
        <h2><%= link_to(event.name,"events/#{event.id}")%></h2>
      </header>
      <p>
        <%= event.description%>
      </p>
      <table>
        <tr>
          <th>When:</th>
          <td><%= event.starts_at %></td>
        </tr>
        <tr>
          <th>Where:</th>
          <td><%= event.location %></td>
        </tr>
        <tr>
          <th>Price:</th>
          <td><%= format_price(event)%></td>
        </tr>
      </table>
    </article>
  <%end%>
</ul>
